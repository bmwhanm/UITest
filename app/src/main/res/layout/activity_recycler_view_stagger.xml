<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_recycler_view_stagger"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hq.uitest.recyclerviewt.RecyclerViewStaggerActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_stagger"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom">
        <Button
            android:id="@+id/btn_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ListView"/>
        <Button
            android:id="@+id/btn_grid"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="GridView"/>
        <Button
            android:id="@+id/btn_stagger"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Stagger View"/>
        <Button
            android:id="@+id/btn_add_item"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="addItem"/>
        <Button
            android:id="@+id/btn_remove_item"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="RemoveItem"/>
    </LinearLayout>
</FrameLayout>
