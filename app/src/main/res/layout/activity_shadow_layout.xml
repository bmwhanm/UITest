<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hq.uitest.shadow.ShadowLayoutActivity">


    <com.hq.uitest.shadow.ShadowLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:sl_shadowColor="#00ffff"
        app:sl_dx="0dp"
        app:sl_dy="0dp"
        app:sl_cornerRadius="0dp"
        app:sl_shadowRadius="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Shadow Test sldx sldy(0dp) shadowColor(#00ffff) shadowRadius(2dp)
sl_cornerRadius=0dp"
            />
    </com.hq.uitest.shadow.ShadowLayout>



    <com.hq.uitest.shadow.ShadowLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:sl_shadowColor="#ff00ffff"
        app:sl_cornerRadius="2dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Shadow Test sldx sldy(5dp) shadowColor(#00ffff) shadowRadius(2dp)
            sl_cornerRadius=10dp"
            />
    </com.hq.uitest.shadow.ShadowLayout>


    <com.dd.ShadowLayout
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:sl_shadowColor="#AA00ffff"
        app:sl_cornerRadius="2dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="88dp"
            android:minHeight="36dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="Button"/>

    </com.dd.ShadowLayout>
</LinearLayout>
