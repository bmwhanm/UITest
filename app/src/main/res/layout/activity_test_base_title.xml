<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hq.uitest.basetest.TestBaseTitleActivity">
    <include layout="@layout/lay_title_base"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World !"
        android:gravity="center"/>

    <Button
        android:id="@+id/btn_show_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="showError"/>
    <Button
        android:id="@+id/btn_show_nodata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="showNoData"/>
    <Button
        android:id="@+id/btn_show_no_network"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="showNoNetWork"/>
    <Button
        android:id="@+id/btn_show_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="showProgress"/>

</LinearLayout>
