<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:id="@+id/btn_change_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Text Lines" />


    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Test sg ggs dgg d gg g g ghs dfg"
        android:textColor="#000000"
        android:textSize="18sp" />

    <com.hq.uitest.UnderLineBgTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lineSpacingExtra="2dp"
        android:maxLines="2"
        android:text="你才我猜不猜你才我猜不猜你才我猜不猜你才我猜不猜你才我猜不猜"
        android:textColor="#000000"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <com.hq.uitest.XieBianBgTextView
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:text="红方 80%"
            android:textColor="#ffffff"
            app:bgColor="#ff7575"
            app:bgDirection="left" />

        <com.hq.uitest.XieBianBgTextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="20dp"
            android:gravity="center_vertical|right"
            android:text="蓝方 20%"
            android:textColor="#ffffff"
            app:bgColor="#448aff"
            app:bgDirection="right" />
    </LinearLayout>


    <com.hq.uitest.UnderLineBgTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lineSpacingExtra="2dp"
        android:maxLines="2"
        android:text="你才我猜不猜你才我猜不猜你才"
        android:textColor="#000000"
        android:textSize="18sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:background="#00ff00" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="#0000ff" />
    </LinearLayout>
</LinearLayout>