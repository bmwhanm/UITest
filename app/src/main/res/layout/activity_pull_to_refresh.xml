<?xml version="1.0" encoding="utf-8"?>
<in.srain.cube.views.ptr.PtrFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:ptr_duration_to_close="300"
    app:ptr_duration_to_close_header="2000"
    app:ptr_keep_header_when_refresh="false"
    app:ptr_pull_to_fresh="false"
    app:ptr_ratio_of_header_height_to_refresh="1.2"
    app:ptr_resistance="1.7"
    tools:context="com.hq.uitest.ultrapull.PullToRefreshActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:clickable="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="This is PtrFrameLayout"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />
    </LinearLayout>

    <in.srain.cube.views.ptr.header.StoreHouseHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff0000"/>
</in.srain.cube.views.ptr.PtrFrameLayout>
