<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_left_delete"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hq.uitest.event.LeftDeleteActivity">

    <TextView
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_gravity="end"
        android:background="@color/colorAccent"
        />
    <com.hq.uitest.event.DeleteLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/lay_left_delete"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/colorPrimary" />
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            />

    </com.hq.uitest.event.DeleteLinearLayout>

    <Button
        android:id="@+id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Close Left"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Left"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_not"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Not canScroll"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_can"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CanScroll"
        android:visibility="gone"/>

</FrameLayout>
